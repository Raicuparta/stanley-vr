<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net48</TargetFramework>
        <AssemblyName>StanleyVr</AssemblyName>
        <Description>VR mod for The Stanley Parable Ultra Deluxe</Description>
        <Version>1.0.0</Version>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>10</LangVersion>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
        <OutputPath>C:\Program Files (x86)\Steam\steamapps\common\The Stanley Parable Ultra Deluxe\BepInEx\plugins\StanleyVr</OutputPath>
        <UnityProjectPath>$(SolutionDir)\StanleyVrUnity</UnityProjectPath>
        <AssetBundlesPath>$(UnityProjectPath)\AssetBundles\StandaloneWindows</AssetBundlesPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
        <PackageReference Include="BepInEx.Core" Version="5.4.19" />
        <PackageReference Include="BepInEx.PluginInfoProps" Version="1.*" />
        <PackageReference Include="StanleyParable.GameLibs" Version="1.4.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="$(AssetBundlesPath)\*" Exclude="$(AssetBundlesPath)\*.manifest;$(AssetBundlesPath)\StandaloneWindows">
            <LinkBase>Assets</LinkBase>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
        <Content Include="..\StanleyVrUnity\Assets\StreamingAssets\SteamVR\bindings_*.json">
            <Link>Bindings\actions.json</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <Reference Include="LIV">
            <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\LIV.dll</HintPath>
        </Reference>
        <Reference Include="SteamVR">
            <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\SteamVR.dll</HintPath>
        </Reference>
        <Reference Include="SteamVR_Actions">
            <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\SteamVR_Actions.dll</HintPath>
        </Reference>
        <Reference Include="Unity.XR.Management">
            <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\Unity.XR.Management.dll</HintPath>
        </Reference>
        <Reference Include="Unity.XR.OpenVR">
            <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\Unity.XR.OpenVR.dll</HintPath>
        </Reference>
    </ItemGroup>
</Project>
