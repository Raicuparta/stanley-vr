<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net48</TargetFramework>
        <AssemblyName>StanleyVr</AssemblyName>
        <Description>My first plugin</Description>
        <Version>1.0.0</Version>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>latest</LangVersion>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <CopyLocalLockFileAssemblies>false</CopyLocalLockFileAssemblies>
        <OutputPath>C:\Program Files (x86)\Steam\steamapps\common\The Stanley Parable Ultra Deluxe\BepInEx\plugins\StanleyVr</OutputPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="BepInEx.Analyzers" Version="1.*" PrivateAssets="all" />
        <PackageReference Include="BepInEx.Core" Version="5.4.19" />
        <PackageReference Include="BepInEx.PluginInfoProps" Version="1.*" />
        <PackageReference Include="StanleyParable.GameLibs" Version="1.4.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework.TrimEnd(`0123456789`))' == 'net'">
        <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\StanleyVrUnity\AssetBundles\StandaloneWindows\liv-shaders">
        <Link>Assets\liv-shaders</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\StanleyVrUnity\AssetBundles\StandaloneWindows\liv-shaders.manifest">
        <Link>Assets\liv-shaders.manifest</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\StanleyVrUnity\AssetBundles\StandaloneWindows\vr-ui">
        <Link>Assets\vr-ui</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <Content Include="..\StanleyVrUnity\AssetBundles\StandaloneWindows\vr-ui.manifest">
        <Link>Assets\vr-ui.manifest</Link>
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <Reference Include="LIV, Version=0.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\StanleyVrUnity\Build\StanleyVrUnity_Data\Managed\LIV.dll</HintPath>
      </Reference>
      <Reference Include="SteamVR, Version=0.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\..\two-forks-vr\UnityHelper\Build\UnityPlayer_Data\Managed\SteamVR.dll</HintPath>
      </Reference>
      <Reference Include="SteamVR_Actions, Version=0.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\..\two-forks-vr\UnityHelper\Build\UnityPlayer_Data\Managed\SteamVR_Actions.dll</HintPath>
      </Reference>
    </ItemGroup>
</Project>
